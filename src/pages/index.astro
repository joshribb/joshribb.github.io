---
import Verse from '../components/Verse.astro';
import Layout from '../layouts/Layout.astro';
import dayjs from 'dayjs';
import proverb from '../proverb';

const { ref, text } = await proverb();
const today = dayjs().format('MMMM D, YYYY hh:mm A');
---

<Layout title={ref}>
    <Verse ref={ref} text={text} />
    <p class="date">{today}</p>
</Layout>

<style>
    .date {
        font-size: 0.875rem;
        opacity: 0.5;
    }
</style>
